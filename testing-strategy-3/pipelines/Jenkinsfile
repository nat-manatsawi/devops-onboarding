pipeline {
    agent any

    tools {nodejs "NodeJS"}

    environment {
        PROJECT_PATH="${env.JENKINS_HOME}/workspace/OnBoardingPart3/testing-strategy-3"
        SCRIPTS_PATH="${PROJECT_PATH}/scripts"
        // PATH=$(pwd)
        // E2E_PATH="${PATH/scripts/""}/e2e-web"
        // WEB_PATH="${PATH/scripts/""}web"
        DEV="dev"
        ALPHA="alpha"
        PREPROD="preprod"
        PROD="prod"
    }

    stages {
        stage('Build') {
           steps {
                dir("${SCRIPTS_PATH}") {
                    sh "echo building..."
                    // sh "cd ${E2E_PATH} && npm i"
                    // sh "cd ${WEB_PATH} && npm i"
                }
            }
        }
        stage('Test environment DEV') {
            steps {
                dir("${SCRIPTS_PATH}") {
                   sh """
                    echo "Test"
                    """
                }
            }
        }
        stage('Deployment') {
            steps {
                dir("${SCRIPTS_PATH}") {
                   sh """
                    echo "Deployment"
                    """
                }
            }
        }
    }
}